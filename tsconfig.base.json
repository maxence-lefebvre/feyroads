{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@feyroads/canvas/components": ["libs/canvas/components/src/index.ts"],
      "@feyroads/canvas/state": ["libs/canvas/state/src/index.ts"],
      "@feyroads/editor/graph/components": [
        "libs/editor/graph/components/src/index.ts"
      ],
      "@feyroads/editor/graph/state": ["libs/editor/graph/state/src/index.ts"],
      "@feyroads/editor/viewport/state": [
        "libs/editor/viewport/state/src/index.ts"
      ],
      "@feyroads/ext/react/hooks": ["libs/ext/react/hooks/src/index.ts"],
      "@feyroads/kernel/debug": ["libs/kernel/debug/src/index.ts"],
      "@feyroads/math/components": ["libs/math/components/src/index.ts"],
      "@feyroads/math/core": ["libs/math/core/src/index.ts"],
      "@feyroads/math/graph": ["libs/math/graph/src/index.ts"],
      "@feyroads/math/state": ["libs/math/state/src/index.ts"],
      "@feyroads/world/components": ["libs/world/components/src/index.ts"],
      "@feyroads/world/core": ["libs/world/core/src/index.ts"],
      "@feyroads/world/state": ["libs/world/state/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
